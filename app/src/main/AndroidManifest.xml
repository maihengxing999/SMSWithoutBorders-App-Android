<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.USE_BIOMETRIC" />

    <queries>
        <intent>
            <action android:name="android.intent.action.SENDTO" />

            <data android:scheme="*" />
        </intent>
    </queries>

    <uses-feature android:name="android.hardware.camera" />
    <uses-feature android:name="android.hardware.camera.autofocus" />

    <application
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:localeConfig="@xml/locales_config"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.main"
        android:usesCleartextTraffic="false"
        android:versionCode="48"
        android:versionName="2.5.8">
        <activity
            android:name=".SettingsActivity"
            android:exported="false"
            android:parentActivityName=".HomepageActivity" />
        <activity
            android:name=".LoginActivity"
            android:exported="false"></activity>
        <activity
            android:name=".OnboardingActivity"
            android:exported="true"
            android:label="@string/title_activity_onboarding">

            <!-- <intent-filter> -->
            <!-- <action android:name="android.intent.action.MAIN" /> -->


            <!-- <category android:name="android.intent.category.LAUNCHER" /> -->
            <!-- </intent-filter> -->
        </activity>

        <service
            android:name="androidx.appcompat.app.AppLocalesMetadataHolderService"
            android:enabled="false"
            android:exported="false">
            <meta-data
                android:name="autoStoreLocales"
                android:value="true" />
        </service>

        <activity
            android:name=".HomepageActivity"
            android:exported="false"
            android:launchMode="singleTask"/>

        <activity
            android:name=".Settings.GatewayClientListingActivity"
            android:exported="false"
            android:parentActivityName=".SettingsActivity" />

        <activity
            android:name=".MessagesActivity"
            android:exported="false">
            <meta-data
                android:name="android.app.lib_name"
                android:value="" />
        </activity>
        <activity
            android:name=".MessageComposeActivity"
            android:exported="false"
            android:label="@string/message_compose_header"
            android:parentActivityName=".HomepageFragments.AvailablePlatformsFragment" />

        <activity
            android:name=".SyncHandshakeActivity"
            android:exported="false" />

        <activity
            android:name=".WelcomeActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".SyncInitiateActivity"
            android:exported="true"
            android:label=""
            android:parentActivityName=".WelcomeActivity">
            <intent-filter android:label="pending_name">
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data
                    android:host="developers.smswithoutborders.com"
                    android:pathPrefix="/v2/sync/users/"
                    android:scheme="apps" />
                <data
                    android:host="staging.smswithoutborders.com"
                    android:pathPrefix="/v2/sync/users/"
                    android:scheme="apps" />
                <data
                    android:host="staging.smswithoutborders.com"
                    android:pathPrefix="/v2/sync/users/"
                    android:scheme="app" />
                <data
                    android:host="staging.smswithoutborders.com"
                    android:pathPrefix="/sign-up/"
                    android:scheme="intent" />
                <data
                    android:host="smswithoutborders.com"
                    android:pathPrefix="/sign-up/"
                    android:scheme="intent" />
                <!-- note that the leading "/" is required for pathPrefix -->
            </intent-filter>
        </activity>
        <activity
            android:name=".HomepageFragments.AvailablePlatformsFragment"
            android:exported="false" />
        <activity
            android:name=".Settings.GatewayClientsSettingsActivity"
            android:exported="false"
            android:parentActivityName=".HomepageActivity" />
        <activity
            android:name=".AddNewGatewayActivity"
            android:exported="false"
            android:parentActivityName=".Settings.GatewayClientsSettingsActivity" />
        <activity
            android:name=".Settings.StoreAccessSettingsActivity"
            android:exported="false"
            android:parentActivityName=".HomepageActivity" />
        <activity
            android:name=".EmailComposeActivity"
            android:exported="false"
            android:parentActivityName=".HomepageFragments.AvailablePlatformsFragment">
            <intent-filter>
                <action android:name="android.intent.action.SEND" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".TextComposeActivity"
            android:exported="false"
            android:label=""
            android:parentActivityName=".HomepageFragments.AvailablePlatformsFragment">
            <intent-filter>
                <action android:name="android.intent.action.SEND" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".QRScannerActivity"
            android:exported="false"
            android:label=""
            android:parentActivityName=".PasswordActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".PasswordActivity" />
        </activity>
        <activity
            android:name=".PasswordActivity"
            android:exported="false" />
        <activity
            android:name=".MessageLockBiometricsActivity"
            android:exported="false" />
        <activity
            android:name=".AppLockBiometricActivity"
            android:exported="false" />
    </application>

</manifest>